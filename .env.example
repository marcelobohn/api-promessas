# PostgreSQL settings used by both the API and docker-compose
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=promessas_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Port where the API listens inside the container
APP_PORT=3000

# Prisma/Node connection string (ajuste host e credenciais para o seu ambiente)
DATABASE_URL=postgresql://postgres:your_password@postgres:5432/promessas_db?schema=public
